<UserControl x:Class="MajorMudX.UI.Views.MainCharacterDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit">

    <toolkit:DockPanel VerticalAlignment="Stretch" Name="dockPanel1" HorizontalAlignment="Stretch" LastChildFill="True" Background="Black">
        <TextBox x:Name="textTrapping" Height="0" toolkit:DockPanel.Dock="Right" Width="0" Visibility="Visible" KeyUp="textTrapping_KeyUp" TextChanged="textTrapping_TextChanged"/>
        <toolkit:Expander IsExpanded="True" Background="White" BorderThickness="0,0,0,0" Height="{Binding ElementName=dockPanel1, Path=ActualHeight}" ExpandDirection="Right" toolkit:DockPanel.Dock="Left">
            <Grid Width="100">

            </Grid>
        </toolkit:Expander>
        <Grid GotFocus="Grid_GotFocus">
            <ScrollViewer x:Name="MainTextViewer">
                <TextBlock x:Name="MainTextArea"/>
            </ScrollViewer>
        </Grid>
    </toolkit:DockPanel>
</UserControl>
